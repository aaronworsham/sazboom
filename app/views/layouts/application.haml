                  .text home
                %p
                  home is where the 
                  %br 
                  = image_tag 'ruby_logo_small.png', :id => 'nav_heart'
                  %span#move_is= "is"
            %li                    
              %a.nav_without_heart{:href => "/clients"} 
                .navbox
                  .text clients
                %p
                  work we have done 
            %li                    
              %a.nav_without_heart{:href => "/services"} 
                .navbox
                  .text services    
                %p
                  what we can help you with 
            %li                    
              %a.nav_without_heart{:href => "/community"} 
                .navbox
                  .text support    
                %p
                  our part for ruby's community    
            %li                    
              %a.nav_without_heart{:href => "/about"} 
                .navbox
                  .text about    
                %p
                  things we admit to                    
        .right
          .round_box
            .img_right
              = image_tag 'we_know_ruby.png'
      = yield_content :header
      = yield_content :contact
      
      #container
        #main= yield
      #footer 
